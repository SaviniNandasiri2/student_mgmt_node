
<div class="container">
<div class="d-flex justify-content-between">
    <div class="search">
        <h3>Manage Programs</h3>
    </div>
    <div>
        <form class="d-flex" role="search" action="/find-programs" method="post">
        <input class="form-control me-2 searchbox" name="text" type="search" placeholder="Search here" aria-label="Search">
        <button class="btn btn-dark" type="submit">Search</button>
        </form>
    </div>
</div>

<form action="/create-program" method="post" class="mt-4">
    <div class="row">
        <div class="form-group col-3 mb-2">
            <input type="text" class="form-control form-control-sm" name="programId" placeholder="Program ID" required>
        </div>
        <div class="form-group col-6 mb-2">
            <input type="text" class="form-control form-control-sm" name="programName" placeholder="Program Name" required>
        </div>
    </div>

    <div class="row"> 
        <div class="form-group col-3 mb-2">
            <input type="text" name="startDate" placeholder="Start Date" class="form-control form-control-sm datepicker" autocomplete="off" required>
        </div>

        <div class="form-group col-3 mb-2">
            <input type="text" class="form-control form-control-sm" name="duration" placeholder="Duration" required>
        </div>
    </div>

    <div class="col-3">
        <button type="submit" class="btn btn-sm btn-primary col-12">Save Program</button>
    </div>

</form>

<hr>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Program_Id</th>
            <th>Program Name</th>
            <th>Start Date</th>
            <th>Duration</th>
            <th>options</th>
            <th>Enrollments</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <td>{{this.program_id}}</td>
            <td>{{this.program_name}}</td>
            <td>{{this.start_date}}</td>
            <td>{{this.duration}}</td>
            <td>
                <a href="/delete-program/{{this.program_id}}" class="btn btn-sm btn-danger">Delete </a>&nbsp;
                <a href="/update-program-form/{{this.program_id}}" class="btn btn-sm btn-warning">Update</a>
            </td>
            <td>
                <a href="/show-registrations/{{this.program_id}}" class="btn btn-sm btn-success">View List</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
    </div>
</div>

