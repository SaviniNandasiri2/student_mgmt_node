<div class="container single-form">
<form action="/update-student" method="post">

        <div class="form-group col-4 mb-3">
            <label for="studentid">Student Id:</label>
            <input type="text" class="form-control form-control-sm" name="studentid" value="{{this.student.student_id}}" readonly required>
        </div>
        <div class="form-group col-6 mb-3">
            <label for="fullname">Full Name:</label>
            <input type="text" class="form-control form-control-sm" name="fullname" value="{{this.student.full_name}}" required>
        </div>
        <div class="form-group col-4 mb-3">
            <label for="nic">NIC:</label>
            <input type="text" class="form-control form-control-sm" name="nic" value="{{this.student.nic}}" required>
        </div>
        <div class="form-group col-4 mb-3">
            <label for="birthday">Date of birth:</label>
            <input type="text" name="birthday" value="{{this.student.birthday}}" class="form-control form-control-sm datepicker" autocomplete="off" required>
        </div>
        <div class="form-group col-4 mb-3">
            <legend class="col-form-label col-sm-2">Gender:</legend> &nbsp;&nbsp;
            <div class="form-check form-check-inline pt-2">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Male" {{#ifEquals this.student.gender "Male"}}checked{{/ifEquals}}>
                <label class="form-check-label" for="Male">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female" {{#ifEquals this.student.gender "Female"}}checked{{/ifEquals}}>
                <label class="form-check-label" for="Female">Female</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio3" value="Other" {{#ifEquals this.student.gender "Other"}}checked{{/ifEquals}}>
                <label class="form-check-label" for="Other">Other</label>
            </div>
        </div>
    <div class="form-group col-4 mb-3">
        <label for="contact">Contact:</label>
        <input type="text" class="form-control form-control-sm" name="contact" value="{{this.student.contact}}" required>
    </div>
    <div class="form-group col-4 mb-3">
        <label for="email">Email:</label>
        <input type="email" class="form-control form-control-sm" name="email" value="{{this.student.email}}" required>
    </div>

    <div class="col-6">
        <button type="submit" class="btn btn-sm btn-primary col-12">Update Student</button>
    </div>
 
</form>
</div>

