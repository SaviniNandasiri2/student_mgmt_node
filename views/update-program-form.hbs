<div class="container single-form">
<form action="/update-program" method="post">

        <div class="form-group col-4 mb-3">
            <label for="programId">Program Id:</label>
            <input type="text" class="form-control form-control-sm" name="programId" value="{{this.program.program_id}}" readonly>
        </div>
        <div class="form-group col-6 mb-3">
            <label for="programName">Program Name:</label>
            <input type="text" class="form-control form-control-sm" name="programName" value="{{this.program.program_name}}" required>
        </div>

        <div class="form-group col-4 mb-3">
            <label for="startDate">Start Date:</label>
            <input type="text" name="startDate" value="{{this.program.start_date}}" class="form-control form-control-sm datepicker" autocomplete="off" required>
        </div>
            <div class="form-group col-4 mb-3">
            <label for="duration">Duration:</label>
            <input type="text" class="form-control form-control-sm" name="duration" value="{{this.program.duration}}" required>
        </div>

    <div class="col-6">
        <button type="submit" class="btn btn-sm btn-primary col-12">Update Program</button>
    </div>
 
</form>
</div>

