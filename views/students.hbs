
<div class="container">
<div class="d-flex justify-content-between">
    <div class="search">
        <h3>Manage Students</h3>
    </div>
    <div>
        <form class="d-flex" role="search" action="/find-students" method="post">
        <input class="form-control me-2 searchbox" name="text" type="search" placeholder="Search here" aria-label="Search">
        <button class="btn btn-dark" type="submit">Search</button>
        </form>
    </div>
</div>

<form action="/create-student" method="post" class="mt-4">
    <div class="row">
        <div class="form-group col-3 mb-3">
            <input type="text" class="form-control form-control-sm" name="studentid" placeholder="Student ID" required>
        </div>
        <div class="form-group col-6 mb-3">
            <input type="text" class="form-control form-control-sm" name="fullname" placeholder="Full Name" required>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-3 mb-1">
            <input type="text" class="form-control form-control-sm" name="nic" placeholder="NIC" required>
        </div>
        <div class="form-group col-3 mb-1">
            <input type="text" name="birthday" placeholder="Date of Birth" class="form-control form-control-sm datepicker" autocomplete="off" required>
        </div>
        <div class="form-group col-4 mb-1">
            <legend class="col-form-label col-sm-2 ">Gender:</legend>&nbsp;
            <div class="form-check form-check-inline pt-2">
            <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Male" checked>
            <label class="form-check-label" for="Male">Male</label>
            </div>
            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female">
            <label class="form-check-label" for="Female">Female</label>
            </div>
            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="inlineRadio3" value="Other">
            <label class="form-check-label" for="Other">Other</label>
            </div>
        </div>
    </div>

        <div class="row">
    <div class="form-group col-3 mb-1">
        <input type="text" class="form-control form-control-sm" name="contact" placeholder="Contact Number" required>
    </div>
    <div class="form-group col-3 mb-1">
        <input type="email" class="form-control form-control-sm" name="email" placeholder="Email" required>
    </div>

    <div class="col-3">
        <button type="submit" class="btn btn-sm btn-primary col-12">Save Student</button>
    </div>
    </div>
</form>

<hr>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>St_Id</th>
            <th>Name</th>
            <th>nic</th>
            <th>birthday</th>
            <th>gender</th>
            <th>contact</th>
            <th>email</th>
            <th>options</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <td>{{this.student_id}}</td>
            <td>{{this.full_name}}</td>
            <td>{{this.nic}}</td>
            <td>{{this.birthday}}</td>
            <td>{{this.gender}}</td>
            <td>{{this.contact}}</td>
            <td>{{this.email}}</td>
            <td>
                <a href="/delete-student/{{this.student_id}}" class="btn btn-sm btn-danger">Delete </a>&nbsp;
                <a href="/update-student-form/{{this.student_id}}" class="btn btn-sm btn-warning">Update</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

</div>


